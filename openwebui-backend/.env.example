# Copy this file to .env and fill values. DO NOT commit your .env to git.

# MongoDB connection string
MONGO_URI=mongodb://localhost:27017/ollamaDB

# JWT secret used to sign tokens
JWT_SECRET=replace-with-a-strong-random-string
JWT_EXPIRES_IN=7d

# Bcrypt rounds
BCRYPT_ROUNDS=12

# App port
PORT=3001

# Frontend origin for CORS (update for production)
FRONTEND_ORIGIN=http://localhost:3000

# Microsoft OAuth (fill with your app registration values)
MICROSOFT_CLIENT_ID=3230add9-f47c-48da-b1a3-09e790cf7e60
MICROSOFT_CLIENT_SECRET=replace-with-client-secret
MICROSOFT_TENANT_ID=your-tenant-id-or-common
MICROSOFT_REDIRECT_URI=http://localhost:3000/auth/callback

# Any other env keys used by the app
# e.g. CHROMA_PERSIST_DIR=./chroma_db
